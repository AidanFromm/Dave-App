# ==========================================
# Secured Tampa (Dave App) — Environment Variables
# ==========================================

# --- Supabase (REQUIRED) ---
NEXT_PUBLIC_SUPABASE_URL=           # Your Supabase project URL (https://xxx.supabase.co)
NEXT_PUBLIC_SUPABASE_ANON_KEY=      # Supabase anon/public key
SUPABASE_SERVICE_ROLE_KEY=          # Supabase service role key (server-side only, never expose)

# --- Stripe (REQUIRED for checkout) ---
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY= # Stripe publishable key (pk_live_... or pk_test_...)
STRIPE_SECRET_KEY=                  # Stripe secret key (sk_live_... or sk_test_...)
STRIPE_WEBHOOK_SECRET=              # Stripe webhook signing secret (whsec_...)

# --- Site URL (REQUIRED) ---
NEXT_PUBLIC_SITE_URL=http://localhost:3000  # Production: https://securedtampa.com

# --- Resend (REQUIRED for order confirmation emails) ---
RESEND_API_KEY=                     # Resend API key for transactional emails

# --- StockX (optional — market data / price sync) ---
STOCKX_CLIENT_ID=                   # StockX OAuth client ID
STOCKX_CLIENT_SECRET=               # StockX OAuth client secret
STOCKX_API_KEY=                     # StockX API key
NEXT_PUBLIC_STOCKX_CLIENT_ID=       # Same as STOCKX_CLIENT_ID (for client-side OAuth flow)

# --- Clover POS Integration (optional) ---
NEXT_PUBLIC_CLOVER_APP_ID=          # Clover app ID
CLOVER_APP_SECRET=                  # Clover app secret
CLOVER_MERCHANT_ID=                 # Clover merchant ID
CLOVER_API_TOKEN=                   # Clover API access token
CLOVER_ENVIRONMENT=sandbox          # "sandbox" or "production"
CLOVER_WEBHOOK_SECRET=              # Clover webhook verification secret

# --- Shippo (optional — shipping labels) ---
SHIPPO_API_KEY=                     # Shippo API key for shipping labels/rates

# --- Twilio (optional — SMS notifications for pickup orders) ---
TWILIO_ACCOUNT_SID=                 # Twilio account SID
TWILIO_AUTH_TOKEN=                  # Twilio auth token
TWILIO_PHONE_NUMBER=               # Twilio phone number (+1...)

# --- Google Analytics (optional) ---
NEXT_PUBLIC_GA4_ID=                 # Google Analytics 4 measurement ID (G-XXXXXXX)

# --- Meta Pixel (optional) ---
NEXT_PUBLIC_META_PIXEL_ID=          # Meta/Facebook Pixel ID

# --- Sentry (optional — error monitoring) ---
SENTRY_AUTH_TOKEN=                  # Sentry auth token for source maps
NEXT_PUBLIC_SENTRY_DSN=             # Sentry DSN for error reporting
